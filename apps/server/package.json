{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "email:dev": "email dev --port 3002"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.4.0",
    "@react-email/components": "^0.0.41",
    "@trpc/client": "^11.4.2",
    "@trpc/server": "^11.4.2",
    "better-auth": "^1.3.4",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.2",
    "pg": "^8.14.1",
    "react": "^19.1.1",
    "resend": "^6.0.1",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "@types/bun": "^1.2.6",
    "@types/pg": "^8.11.11",
    "@types/react": "^19.1.10",
    "drizzle-kit": "^0.31.2",
    "react-email": "^4.1.0",
    "tsdown": "^0.13.1",
    "typescript": "^5.8.2"
  }
}
